@using Food_Delivery.Models
@model List<InvoiceDetail>
@{
    ViewData["Title"] = "OrderDetail";
   
}



<body>
    <table class="table" id="dataTable">
        <thead style="text-align:center; background-color:khaki;">
            <tr >
                <th style="text-align:center"> Order Id </th>
                <th style="text-align:center"> Order Date </th>
                <th style="text-align:center"> Hotel Name </th>
                <th style="text-align:center"> Food Name </th>
                <th style="text-align:center">Quantity</th>
                <th style="text-align:center">Price</th>
                <th style="text-align:center">  TotalPrice </th>
            </tr>
        </thead>


        <tbody style="text-align:center">
            @foreach (InvoiceDetail item in Model)
            {
                <tr style="text-align:center">
                    <td>@item.OrderId</td> 
                    <td>@item.Orderdate</td>
                    <td> @item.HotelName  </td>
                    <td> @item.FoodName </td>
                    <td> @item.Quantity  </td>
                    <td>@item.Price</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        </tbody>



        <tfoot>
            <tr>
            </tr>
        </tfoot>
    </table>

</body>
