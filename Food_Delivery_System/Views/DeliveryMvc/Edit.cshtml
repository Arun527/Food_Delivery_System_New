@using Food_Delivery.Models
@model DeliveryPerson
<section class="h-100 ">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6">
                            @using (Html.BeginForm("EditDetail", "DeliveryMvc", FormMethod.Post))
                            {
                                <div align="center" class="card-body p-md-5 text-black">
                                    @if (TempData["AlertMessage"] != null)
                                    {
                                        <div class="alret alert-danger">
                                            <strong>Warning !</strong>  @TempData["AlertMessage"]
                                        </div>
                                    }
                                    <h3 class="mb-5 ">Registration form</h3>
                                    <div>
                                        <div align="center" class="col-md-12">


                                            <div class=" row ">
                                              
                                                <div class="col-md-6">
                                                    @Html.HiddenFor(model=>model.DeliveryPersonId , new { @class="form-control", required = "required" , maxlength = "20"} )
                                                </div>

                                            </div>

                                            <div class=" row">
                                                <div class="col-md-6"> Name</div>
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(model=>model.DeliveryPersonName , new { @class="form-control", required = "required" , maxlength = "20"} )
                                                </div>

                                            </div>


                                            <div class=" row m-5">
                                                <div class="col-md-6">Contact Number<span  id="mandatory"> * </span></div>
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(model=>model.ContactNumber , new { @class="form-control", required = "required" , maxlength = "20"} )
                                                </div>

                                            </div>


                                            <div class=" row m-5">
                                                <div class="col-md-6">VechileNo<span  id="mandatory"> * </span></div>
                                                <div class="col-md-6">
                                                    @Html.TextBoxFor(model=>model.VechileNo , new { @class="form-control", required = "required" , maxlength = "20"} )
                                                </div>

                                            </div>

                                            <div class=" row m-5">
                                                <div class="col-md-6">Gender </div>
                                                <div class="col-md-6">
                                                    <label for="gender">Male</label>
                                                    @Html.RadioButtonFor(m=>m.Gender ,"Male")
                                                    <label for="gender">Female</label>
                                                    @Html.RadioButtonFor(m=>m.Gender ,"Female")
                                                </div>

                                            </div>
                                            <div class=" justify-content-center mt-5 col-md-6 offset-3">  <input type="submit" class="btn btn-danger" value="Register" /></div>


                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="~/css/delivery.jpg"
                                 alt="Sample photo" class="img-fluid"
                                id="image6"/>
                        </div>
                    </div>
                </div>
            </div>
</section>




@section Scripts{
    <link href="~/css/css style/editdeliveryperson.css" rel="stylesheet" />

}
