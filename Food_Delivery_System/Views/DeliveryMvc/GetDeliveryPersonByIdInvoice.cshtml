@model List<InvoiceDeliveryPerson>
@{
    ViewData["Title"] = "DeliveryPersonView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body>
    <table class="table" id="dataTable">
        <thead style="text-align:center ; background-color:khaki;">
            <tr style="text-align:center">
              
                <th style="text-align:center"> OrderId      </th>
                <th style="text-align:center">Customer Name </th>
                <th style="text-align:center">Customer Address </th>
                <th style="text-align:center">Delivery Date </th>
                
            </tr>
        </thead>


        <tbody style="text-align:center">
            @foreach (var item in Model)
            {
                <tr style="text-align:center">
                 
                    <td>@item.OrderId  </td>
                    <td>@item.CustomerName </td>
                    <td>@item.Address </td>
                    <td>@item.OrderShipmentdateTime  </td>
                </tr>
            }
        </tbody>



        <tfoot>
            <tr>
            </tr>
        </tfoot>
    </table>

</body>

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

@section scripts{

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <script src="~/js/customer.js"></script>
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable();
        })
    </script>
}