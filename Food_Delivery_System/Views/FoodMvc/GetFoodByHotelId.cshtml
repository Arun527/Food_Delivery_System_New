@using Food_Delivery.Models
@model List<FoodList>
@{
    ViewData["Title"] = "GetAllFood";

}
<div class="container-fluid p-5">
    <div class="row row-cols-3 row-cols-sm-3 row-cols-md-3 row-cols-lg-3">

        @foreach (FoodList item in Model)
        {


            <div class="card p-0">

                <img style=" width: 280px;border-radius:10%; height: 280px;margin-left:15%" src="/css/Image/@item.ImageId" multiple />
              
         
                <p>Food Name: @item.FoodName </p>
                <p>Food Type: @item.Type </p>

                <p>Price   ₹ @item.Price  </p>

                <button>Add</button>
            </div>

        }

    </div>

</div>

