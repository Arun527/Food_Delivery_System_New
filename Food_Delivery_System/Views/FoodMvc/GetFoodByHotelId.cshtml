@using Food_Delivery.Models
@model List<FoodList>
@{
    ViewData["Title"] = "GetAllFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-left:1%">
    <h2>Food Detail</h2>
</div>
@if (TempData["AlertMessage"] != null)
{
        <div class="alret alert-success">
            <strong>Success !</strong>  @TempData["AlertMessage"]
        </div>
}
<div id="margin"  >
    <a class="btn btn-primary" href="/FoodMvc/Add?HotelId=@ViewBag.hotelId">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
            <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
        </svg> Add Food
    </a>
</div>

<div class="container-fluid " id="container" >
    <div class="row row-cols-3 row-cols-sm-3 row-cols-md-3 row-cols-lg-3">

        @foreach (FoodList item in Model)
        {
           
         
             <div class="card me-3 mt-3 " id="border">

                <img id="image2"  src="/css/Image/@item.ImageId" multiple />
                <div class="row ms-lg-3">
                   
                    <div class="col-md-7 offset-1">Food Name: @item.FoodName </div>

                    <div class="col-md-3 offset-0 btn">
                        <a href="/FoodMvc/UpdateFood?FoodId=@item.FoodId">
                            <span class=tooltiptext>Edit</span> <i id="icon"  class='fas'>&#xf044;</i>
                        </a>
                        
                    </div>

                </div>
               
                <div class="row ms-lg-3">

                    <div class="col-md-7 offset-1">Price   ₹ @item.Price</div>

                    <div class="col-md-3  btn " >
                        <a  href="/FoodMvc/DeleteFood?FoodId=@item.FoodId">
                            <span class=tooltiptext>Delete</span> <i id="icon1"  class='fas'>&#xf2ed;</i>
                        </a>
                    </div>
                </div>
                <p class="col-md-8 offset-2">  Food Type: @item.Type </p>
            </div>
        }
    </div>
</div>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<link rel="stylesheet" href="~/css/jquerytable.css" asp-append-version="true" />

<style>
    p {
        margin-left: 30px;
    }

    #container {
        margin-left: 5%;
    }

    #margin {
        margin-left: 85%
    }

    #border {
        width: 30%;
        border-radius: 5%
    }

    #icon {
        font-size: 24px;
        color: cornflowerblue
    }

    #icon1 {
        font-size: 24px;
        color: red
    }

    #image2 {
        width: 280px;
        border-radius: 6%;
        height: 280px;
        margin-left: 10%;
        margin-top: 5%;
        margin-bottom: 5%
    }

    a {
        text-decoration: none;
    }

</style>


