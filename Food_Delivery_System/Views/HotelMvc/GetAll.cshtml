@using Food_Delivery_System.Models
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin-bottom:30px;" class="row ">
    <div style="margin-left:1%">
        <h2>Hotel Detail</h2>
    </div>
    <div style="margin-left:85%">
        <a class="btn btn-primary" href="/HotelMvc/AddHotel">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
            </svg> Add Hotel
        </a>
    </div>

</div>



 <div class="row">
        <div class="col-sm-12">
        <table class="table table-bordered table-striped" id="tblHotel" style="text-align:center" width="100%">
                <thead style="background-color:khaki;" >
                    <tr>
                        <th scope="col">Hotel Id</th>
                        <th scope="col">Hotel Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email</th>
                        <th scope="col">Type</th>
                        <th scope="col">Action</th>
                    </tr>
               
                </thead>
               
            </table>
        </div>
   
 </div>

 

    @section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            bindDatatable();
        });

        function bindDatatable() {
              datatable = $('#tblHotel') 
                .DataTable({
                    "sAjaxSource": "/HotelMvc/GetallDetail",
                    "bServerSide": true,
                    "bProcessing": true,
                    "bSearchable": true,
                    "order": [[1, 'asc']],
                    "language": {
                        "emptyTable": "No record found.",
                        "processing":
                            '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                    },
                    "columns": [
                        {
                            "data": "hotelId",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "hotelName",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "address",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "contactNumber",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "email",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "type",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                           
                            "searchable": false,
                            'render': function (data, type, row) {
                                return "<a href=/FoodMvc/GetFoodByHotelId?hotelId=" + row.hotelId + " class='btn btn-secondary'> Food Detail </a> <a href=/HotelMvc/UpdateHotel?hotelId=" + row.hotelId + " class='btn btn-primary'> Edit </a>  <a href=/HotelMvc/DeleteHotel?hotelId=" + row.hotelId + " class='btn btn-danger'> Delete </a>"
                            }
                            
                        }, 
                    ]
                });
        }
      
    </script>
}
