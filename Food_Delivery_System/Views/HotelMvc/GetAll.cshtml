@using Food_Delivery_System.Models
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="card1" class="row ">
    <div id="card2" >
        <h2>Hotel Detail</h2>
    </div>

    @if (TempData["AlertMessage"] != null)
    {
        @if (TempData["AlertMessage"].Equals ("The hotel Food Is Available For Users"))
        {
            <div class="alret alert-warning">
                <strong>Warning ! </strong>  @TempData["AlertMessage"]
            </div>
        }
        else
        {
        <div class="alret alert-success">
            <strong>Success !</strong>  @TempData["AlertMessage"]
        </div>
        }

    }
    <div id="addlink" >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill-add" viewBox="0 0 16 16">
            <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0Zm-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path d="M2 13c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Z" />
        </svg>  @Html.ActionLink("Add", "AddHotel")
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered table-striped   " id="tblHotel"  cellspacing="0" width="100%">
            <thead class="table"  id="t">
                <tr >
                    <th id="center" scope="col">Hotel Id</th>
                    <th id="center" scope="col">Hotel Name</th>
                    <th id="center" scope="col">Location</th>
                    <th id="center" scope="col">Contact Number</th>
                    <th id="center" scope="col">Email</th>
                    <th id="center" scope="col">Type</th>
                    <th id="center" data-orderable="false" scope="col">Action</th>
                         
                </tr>
               
             </thead>
               
        </table>
    </div>
   
 </div>

