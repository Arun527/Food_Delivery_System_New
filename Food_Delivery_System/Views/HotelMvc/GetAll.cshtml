@model Hotel
<h2>Hotel Detail</h2>
 <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered table-striped" id="tblHotel">
                <thead style="background-color:khaki;text-align:center" >
                    <tr>
                        <th scope="col">Hotel Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Is Active</th>
                        <th scope="col">Action</th>
                    </tr>
               
                </thead>
               
            </table>
        </div>
   
 </div>




    @section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            bindDatatable();
        });

        function bindDatatable() {
              datatable = $('#tblHotel') 
                .DataTable({
                    "sAjaxSource": "/HotelMvc/GetallDetail",
                    "bServerSide": true,
                    "bProcessing": true,
                    "bSearchable": true,
                    "order": [[1, 'asc']],
                    "language": {
                        "emptyTable": "No record found.",
                        "processing":
                            '<i class="fa fa-spinner fa-spin fa-3x fa-fw" style="color:#2a2b2b;"></i><span class="sr-only">Loading...</span> '
                    },
                    "columns": [
                        {
                            "data": "hotelName",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "location",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                            "data": "isActive",
                            "autoWidth": true,
                            "searchable": true
                        },
                        {
                           
                            "searchable": false,
                            'render': function (data, type, row) {
                                return "<a href=/FoodMvc/GetFoodByHotelId?hotelId=" +row.hotelId+ " class='btn btn-primary'> Food Details </a>"
                            }
                            
                        }, 
                    ]
                });
        }
      
    </script>
}
