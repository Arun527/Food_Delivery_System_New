@using Food_Delivery.Models
@model List<InvoiceDetail>

<h2>Your Order Detail</h2>

    <table class="table" id="dataTable">
        <thead id="t">
            <tr id="t">
                <th id="t">Order date </th>
                <th id="t">Hotel Name</th>
                <th id="t">  Food Name </th>
                <th id="t">  Quantity </th>
                <th id="t">  Price </th>
                <th id="t">  Total Price </th>
                <th id="t">  Order Status </th>
            </tr>
        </thead>

        <tbody id="t1">
            @foreach (var item in Model)
            {
                <tr id="t1">
                    <td>@item.Orderdate  </td>
                    <td>@item.HotelName</td>
                    <td>@item.FoodName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.OrderStatus</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
            </tr>
        </tfoot>
    </table>

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.12.1/datatables.min.js"></script>
    <script src="~/js/customer.js"></script>
    <script>
        $(document).ready(function () {
            $("#dataTable").DataTable();
        })
    </script>
    <link href="~/css/css style/getshipmentbyuser.css" rel="stylesheet" />
}



